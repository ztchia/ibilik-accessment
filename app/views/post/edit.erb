<h1> Edit page </h1>

<form action="/posts/<%= @post.id %>" method="Post">

	<input type="hidden" name="_method" value="patch">
	
	<label> Location: </label>
<!-- 	Please input the place your room is located. -->
	<input type="text" name= "location" value= <%=@post.location%>><br>

	<label> Title: </label>
<!-- 	Keep it short and simple. -->
	<input type="text" name = "title" value = <%= @post.title %>><br>

	<label> Description: </label>
<!-- 	Put contact, location, preferences and so on here. -->
	<textarea name = "description"></textarea><br>
	
	<label> Extras: </label>
	<input type= "text" name = "extras" value =<%= @post.extras %>><br>

	<label> Preference: </label>
	<input type="text" name = "preference" value = <%= @post.preference %>><br>

	<label> Monthly Rental: </label>
	<input type="integer" name = "monthly_rental" value = <%= @post.monthly_rental %>><br>

	<input type="submit" value = "Update!">

</form>